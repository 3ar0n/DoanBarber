{{#section 'title'}}
Đặt chỗ
{{/section}}

{{#section 'css'}}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker3.css"/>
{{/section}}

{{#section 'js'}}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker3.css"/>
<script>
    $(document).ready(function () {
        var date_input = $('input[name="date"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        date_input.datepicker({
            format: 'mm/dd/yyyy',
            container: container,
            todayHighlight: true,
            autoclose: true,
            orientation: "bottom left"
        })
    })
</script>
{{/section}}

{{#with User}}
<div class="booking">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label">Khách hàng</label>
            <div class="col-sm-10">
                {{#if layoutVM.isLogged}}
                <p class="form-control-static">{{username}}</p>
                {{else}}
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="service" class="col-sm-2 control-label">Dịch vụ</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="service" placeholder="hớt tóc,...">
            </div>
        </div>
    
        <div class="form-group">
            <label for="time" class="col-sm-2 control-label">Giờ đến</label>
            <div class="col-sm-8">
                <input class="col-md-8" id="time" name="time" placeholder="10h sáng" type="text" />
            </div>
    
        </div>
    
        <div class="form-group">
            <!-- Date input -->
            <label for="date" class="col-sm-2 control-label">Ngày đến</label>
            <div class="col-sm-8">
                <input class="col-md-8" id="date" name="date" placeholder="MM/DD/YYY" type="text" />
            </div>
    
        </div>
    
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-8">
                <button type="submit" class="btn btn-success">Đặt chỗ</button>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
            </div>
        </div>
    </form>
</div>
{{/with}}