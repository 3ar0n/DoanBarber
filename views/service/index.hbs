{{#section 'title'}} Dashboard - Services {{/section}} {{#if layoutVM.curUser.isAdmin}}
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Tên</th>
			<th>Loại</th>
			<th>Thông tin</th>
			<th>Giá</th>
			<th class="col-md-1">&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each services}}
		<tr>
			<td>{{serID}}</td>
			<td>{{serName}}</td>
			<td>{{catID}}</td>
			<td>{{serInfo}}</td>
			<td>{{serPrice}}</td>
			<td class="text-right">
				<a class="btn btn-danger btn-xs" href="/service/delete?id={{serID}}" role="button">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
				<a class="btn btn-primary btn-xs" href="/service/edit?id={{serID}}" role="button">
					<span class="glyphicon glyphicon-wrench"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<a class="btn btn-large btn-block btn-primary" href="#" role="button">
	<span class="glyphicon glyphicon-plus"></span>
	Thêm dịch vụ mới
</a>
{{/if}}