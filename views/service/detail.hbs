{{#section 'title'}}
	Chi tiết dịch vụ
{{/section}}

{{#with services}}
<div class="row">
	<div class="col-md-6 col-md-offset-3 thumbnail">
		<img src="/img/service/{{catID}}/{{serID}}.jpg" style="height: 460px"/>
	</div>
	<div class="col-md-12 caption-lg-orange">
		<h3>{{serName}}</h3>
	</div>
	<div class="col-md-12 padding">
		<span class="caption-lg-red">Giá: {{number_format serPrice}} <span>&#8363;</span> </span>
	</div>
	<div class="col-md-12 padding">
		{{{serInfo}}}
	</div>
</div>
{{/with}}

{{#if layoutVM.isLogged}}
<form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group" style="margin-left: 24px;">
                <input name="proId" type="hidden" value="{{services.ProID}}">
                <input id="txtQ" name="quantity" type="text" class="form-control" placeholder="Slg" value="1">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </span>
            </div>
        </div>
    </div>
</form>
{{/if}}