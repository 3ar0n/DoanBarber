{{#section 'title'}}
	Products
{{/section}}

{{#if layoutVM.curUser.isAdmin}}
<table class="table table-hover">
	<thead>
		<tr>
			<th class="col-md-1">ID</th>
			<th>Tên sản phẩm</th>
            <th>Loại</th>
            <th>Nhãn hiệu</th>
            <th>Tóm tắt</th>
            <th>Chi tiết</th>
            <th>Giá</th>
            <th>Số lượng</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each products}}
		<tr>
			<td>{{proID}}</td>
			<td>{{proName}}</td>
            <td>{{catID}}</td>
            <td>{{proBrand}}</td>
            <td>{{proInfo}}</td>
            <td>{{proDetail}}</td>
            <td>{{proPrice}}</td>
            <td>{{proQuantity}}</td>
			<td class="text-right">
				<a class="btn btn-danger btn-xs" href="/category/delete?id={{proID}}" role="button">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
				<a class="btn btn-primary btn-xs" href="/category/edit?id={{proID}}" role="button">
					<span class="glyphicon glyphicon-wrench"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<a class="btn btn-large btn-block btn-primary" href="#" role="button">
	<span class="glyphicon glyphicon-plus"></span>
	Thêm sản phẩm mới
</a>
{{/if}}








