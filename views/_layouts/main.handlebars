<!DOCTYPE html>
<html>
<head>
	{{!-- <meta charset="UTF-8"> --}}
	<title>{{{_sections.title}}}</title>
	<link rel="stylesheet" type="text/css" href="/assets/bootstrap-3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/assets/css/main.css">
    <link rel="icon" href="/img/logo/icon-scissor.png">
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<a class="navbar-brand" href="/"><img src="/img/logo/logo0.png" style="margin-bottom: 0; height: 30px; padding-top: 0px; padding-left: 35px; padding-right: 50px;"></a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<form class="navbar-form navbar-left" role="search">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Tìm kiếm">
					</div>
					<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
				</form>
				<ul class="nav navbar-nav navbar-right">
					{{#if layoutVM.isLogged}}
					<form id="frmLogout" method="post" action="/account/logout"></form>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="/img/logo/user.png" width="20px" height="20px"> <b>{{layoutVM.curUser.fullname}}</b>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
                            <li><a href="/account/profile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                            {{#if layoutVM.curUser.isAdmin}}
                            {{else}}
                            <li role="presentation" class="divider"></li>
                            <li><a href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng</a></li>
                            <li><a href="/book"><span class="glyphicon glyphicon-calendar"></span> Đặt chỗ</a></li>
                            {{/if}}
                            <li role="presentation" class="divider"></li>
                            <li><a id="lnkLogout" href="javascript:;"><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</a></li>
                        </ul>
					</li>
					{{else}}
					<li>
                        <a href="/account/register"><span class="glyphicon glyphicon-edit"></span> <b>Đăng ký</b></a>				
					</li>
					<li>
						<a href="/account/login"><span class="glyphicon glyphicon-log-in"></span> <b>Đăng nhập</b></a>
					</li>
					{{/if}}
				</ul>
			</div>
		</div>
	</nav>
    <div class="col-md-2">
        {{#if layoutVM.curUser.isAdmin}}
        <div class="panel panel-info">
					<div class="panel-heading">
						<h3 class="panel-title">Dashboard</h3>
					</div>
					<div class="list-group">
						<a href="/account" class="list-group-item"><span class="glyphicon glyphicon-user"></span> Người dùng</a>
						<a href="/category" class="list-group-item"><span class="glyphicon glyphicon-th-list"></span> Danh mục</a>
						<a href="/product" class="list-group-item"><span class="glyphicon glyphicon-tags"></span> Sản phẩm</a>
                        <a href="/service" class="list-group-item"><span class="glyphicon glyphicon-scissors"></span> Dịch vụ</a>
					</div>
				</div>
        {{else}}
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a id="logo" href="/">
                    <img src="/img/logo/logo.png" id="logo">
                </a>
            </li>
            {{#each layoutVM.categories}} {{#if isService}}
            <li><a href="/service/byCat/{{catID}}"><b>{{catName}}</b></a></li>
            {{else}}
            <li><a href="/product/byCat/{{catID}}"><b>{{catName}}</b></a></li>
            {{/if}} {{/each}}
            <li>
                <a href="/home/about"><b>Giới thiệu</b></a>
            </li>
        </ul>
        {{/if}}
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
                <div class="panel panel-default" style="border-style: hidden; box-shadow: 0 0 0 0;">
					{{!-- <div class="panel-heading" style="padding-top:60px">
						<h3 class="panel-title">
							{{{_sections.title}}}
						</h3>
					</div> --}}
					<div class="panel-body" style="padding-top:70px;">
						{{{body}}}
					</div>
				</div>
            </div>
        </div>
    </div>
    
	<script type="text/javascript" src="/assets/jquery-3.3.1.min.js"></script>
	<script type="text/javascript" src="/assets/bootstrap-3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript">
		$('#lnkLogout').on('click', function () {
			$('#frmLogout').submit();
		});
	</script> {{{_sections.js}}}

</body>
</html>