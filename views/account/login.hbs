{{#section 'title'}}
    <title>Đăng nhập</title>
{{/section}}

<form class="form-horizontal" method="post" action="" id="frmLogin">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-3 control-label" style="text-align: left">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-3 control-label" style="text-align: left">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
            <label>
                <input type="checkbox" name="remember"> Ghi nhớ
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-check"></span>
                Đăng nhập
            </button>
        </div>
    </div>
</form>