{{#section 'title'}}
	Thông tin cá nhân
{{/section}}

{{#if showError}}
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>Title!</strong> {{errorMsg}}
</div>
{{/if}}

{{#with User}}
<form class="form-horizontal" action="" method="POST" role="form">
	<div class="form-group">
		<label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtUsername" name="username" value="{{username}}" readonly>
		</div>
	</div>
	<div class="form-group">
		<label for="txtFullName" class="col-sm-2 control-label">Họ tên</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtFullName" name="fullname" value="{{fullName}}">
		</div>
	</div>
	<div class="form-group">
		<label for="txtPhone" class="col-sm-2 control-label">Số điện thoại</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtPhone" name="phone" value="{{phone}}">
		</div>
	</div>
	<div class="form-group">
		<label for="txtAddress" class="col-sm-2 control-label">Địa chỉ</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtAddress" name="address" value="{{address}}">
		</div>
	</div>
	<div class="form-group">
		<label for="txtOldPwd" class="col-sm-2 control-label">Mật khẩu cũ</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtOldPwd" name="oldPwd" placeholder="Mật khẩu cũ">
		</div>
	</div>
	<div class="form-group">
		<label for="txtNewPwd" class="col-sm-2 control-label">Mật khẩu mới</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtNewPwd" name="newPwd" placeholder="Mật khẩu mới">
		</div>
	</div>
	<div class="form-group">
		<label for="txtCmpPwd" class="col-sm-2 control-label">Nhập lại</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" id="txtCmpPwd" name="cmpPwd" placeholder="Nhập lại mật khẩu">
		</div>
	</div>

	<div class="col-sm-offset-2 col-sm-10">
		<button type="submit" class="btn btn-primary">
			<span class="glyphicon glyphicon-save"></span>
			Update
		</button>
	</div>
</form>
{{/with}}